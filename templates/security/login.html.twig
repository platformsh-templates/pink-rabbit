{% extends 'base.html.twig' %}

{% block title %}That vertical red bar{% endblock %}

{% block body %}
<form method="post" class="mb-5">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h2 mb-2 font-weight-normal">Eat me! Drink me! Profile me!</h1>
    <h2 class="h4 mb-5 font-weight-normal">The clock is ticking, A<span>li</span>ce! What timeline is it?</h2>

    <div class="pb-2">
        Hint: a valid user is <code>Chessy</code> with password <code>believe</code>
    </div>
    <div class="form-group">
        <label for="inputEmail" class="sr-only">Email</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" placeholder="Username" required autofocus/>

    </div>
    <div class="form-group">
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" name="_password" id="password" class="form-control" placeholder="Password" required>
    </div>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
    <button class="btn btn-info" type="submit">
        Sign in
    </button>
</form>
{% endblock %}